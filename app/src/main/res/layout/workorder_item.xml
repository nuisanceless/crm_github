<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="73dp"
              android:background="#FFFFFA"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.6dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_order_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="某某某"
            android:textColor="#323232"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:inputType="time"
            android:text="09:21"
            android:textColor="#909090"
            android:textSize="10sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#646464"
            android:text="["/>
        <TextView
            android:id="@+id/item_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="投诉"
            android:textColor="#646464"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#646464"
            android:text="]"/>

        <TextView
            android:id="@+id/item_order_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/order_type"
            android:paddingRight="50dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="谁谁投诉谁说态度很差，价格太yasdyasguydhasudausduajdbaskjdas"
            android:textColor="#646464"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="未查看"
            android:textSize="12sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_marginTop="16.7dp"
        android:layout_gravity="bottom"
        android:background="#BFBFBF" />
</LinearLayout>