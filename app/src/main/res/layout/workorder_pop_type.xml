                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="53dp"
                android:text="@string/type_all"
                android:textColor="#005C61"
                android:textSize="14sp"/>
        </RelativeLayout>

        <View
